<mvc:View
    controllerName="iot.planner.components.billing.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:headerContent>
            <IconTabBar
                id="iconTabBar"
                select=".onQuickSorter"
                expandable="false">
                <items>
                    <IconTabFilter
                        key="all"
                        showAll="true"
                        text="{i18n>allWorkItems}"/>
                    <IconTabSeparator/>
                    <IconTabFilter
                        key="byDate"
                        text="{i18n>groupByDate}"/>
                    <IconTabFilter
                        key="byCustomer"
                        text="{i18n>groupByCustomer}"/>
                    <IconTabFilter
                        key="by User"
                        text="{i18n>groupByUser}"/>
                </items>
                <content>
                    <Table
                        id="table"
                        width="100%"
                        items="{
                            path: '/MyWorkItems',
                            sorter: {
                                path: 'ID',
                                descending: false
                            }
                        }"
                        noDataText="{worklistView>/tableNoDataText}"
                        busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                        growing="true"
                        growingScrollToLoad="true"
                        updateFinished=".onUpdateFinished">

                        <headerToolbar>
                            <OverflowToolbar>
                                <Title
                                    id="tableHeader"
                                    text="{worklistView>/worklistTableTitle}"
                                    level="H3"/>
                                <ToolbarSpacer />
                                <SearchField
                                    id="searchField"
                                    tooltip="{i18n>worklistSearchTooltip}"
                                    search=".onSearch">
                                    <layoutData>
                                        <OverflowToolbarLayoutData
                                            maxWidth="200px"
                                            priority="NeverOverflow"/>
                                    </layoutData>
                                </SearchField>
                            </OverflowToolbar>
                        </headerToolbar>

                        <columns>
                            <Column id="assignedToColumn" demandPopin="true" minScreenWidth="Desktop">
                                <Text text="{i18n>assignedToColumnTitle}" id="assignedToColumnTitle" wrapping="false"/>
                            </Column>
                            <Column id="workDateColumn">
                                <Text text="{i18n>workDateColumnTitle}" id="workDateColumnTitle"/>
                            </Column>
                            <Column id="startTimeColumn">
                                <Text text="{i18n>startTimeColumnTitle}" id="startTimeColumnTitle"/>
                            </Column>
                            <Column id="endTimeColumn">
                                <Text text="{i18n>endTimeColumnTitle}" id="endTimeColumnTitle"/>
                            </Column>
                            <Column id="durationColumn">
                                <Text text="{i18n>durationColumnTitle}" id="durationColumnTitle"/>
                            </Column>
                            <Column id="titleColumn">
                                <Text text="{i18n>titleColumnTitle}" id="titleColumnTitle"/>
                            </Column>
                            <Column id="customerTextColumn" demandPopin="true" minScreenWidth="Desktop">
                                <Text text="{i18n>customerTextColumnTitle}" id="customerTextColumnTitle" wrapping="false"/>
                            </Column>
                            <Column id="projectTextColumn" demandPopin="true" minScreenWidth="Desktop">
                                <Text text="{i18n>projectTextColumnTitle}" id="projectTextColumnTitle" wrapping="false"/>
                            </Column>
                            <Column id="subProjectTextColumn" demandPopin="true" minScreenWidth="Desktop">
                                <Text text="{i18n>subProjectTextColumnTitle}" id="subProjectTextColumnTitle" wrapping="false"/>
                            </Column>
                            <Column id="workPackageTextColumn" demandPopin="true" minScreenWidth="Desktop">
                                <Text text="{i18n>workPackageTextColumnTitle}" id="workPackageTextColumnTitle" wrapping="false"/>
                            </Column>
                            <!-- <Column id="noteColumn">
                                <Text text="{i18n>noteColumnTitle}" id="noteColumnTitle" wrapping="false"/>
                            </Column> -->
                            <Column id="locationColumn" demandPopin="true" minScreenWidth="Desktop">
                                <Text text="{i18n>locationColumnTitle}" id="locationColumnTitle" wrapping="false"/>
                            </Column>
                            <!-- <Column id="hourlyCostColumn">
                                <Text text="{i18n>hourlyCostColumnTitle}" id="hourlyCostColumnTitle" wrapping="false"/>
                            </Column>
                            <Column id="expenseColumn" demandPopin="true" minScreenWidth="Desktop">
                                <Text text="{i18n>expenseColumnTitle}" id="expenseColumnTitle" wrapping="false"/>
                            </Column>
                            <Column id="travelCostColumn" demandPopin="true" minScreenWidth="Desktop">
                                <Text text="{i18n>travelCostColumnTitle}" id="travelCostColumnTitle" wrapping="false"/>
                            </Column>
                            <Column id="totalCostColumn">
                                <Text text="{i18n>totalCostColumnTitle}" id="totalCostColumnTitle"/>
                            </Column> -->
                        </columns>
                        <items>
                            <ColumnListItem
                                type="Navigation"
                                press=".onPress">
                                <cells>
                                    <Text text="{assignedToUserPrincipalName}" wrapping="false"/>
                                    <Text text="{workDate}"/>
                                    <Text text="{startTime}"/>
                                    <Text text="{endTime}"/>
                                    <ObjectNumber number="{duration}" unit="h"/>
                                    <Text text="{title}" wrapping="false"/>                            
                                    <Text text="{customerText}" wrapping="false"/>
                                    <Text text="{projectText}" wrapping="false"/>
                                    <Text text="{subProjectText}" wrapping="false"/>
                                    <Text text="{workPackageText}" wrapping="false"/>
                                    <!-- <Text text="{note}"/> -->
                                    <Text text="{location}"/>
                                    <!-- <Text text="{hourlyCost}"/>
                                    <Text text="{expense}"/>
                                    <Text text="{travelCost}"/>
                                    <Text text="{totalCost}"/> -->
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
            </IconTabBar>
        </semantic:headerContent>
    </semantic:SemanticPage>

</mvc:View>